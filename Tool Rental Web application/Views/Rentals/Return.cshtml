@{
    ViewBag.Title = "Return rental";
}

<h3>Are you sure you want to return this?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RentalId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalId)
        </dd>

        <dt>
            @Html.Label("Customer Name")
        </dt>

        <dd>
            @Html.Raw(ViewBag.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateRented)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateRented)
